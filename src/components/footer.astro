---
const today = new Date();
---

<footer>
    <div class="legal-links">
        <a href="/impressum">Impressum</a>
        <span class="separator">|</span>
        <a href="/datenschutz">Datenschutz</a>
    </div>
    <div class="copyright">
        &copy; {today.getFullYear()} Constantin Luckenbach. All rights reserved.
    </div>
</footer>
<style>
    footer {
        padding: 2em 1em 3em 1em;
        border-top: 1px solid #e6e6e6;
        color: var(--fg-muted);
        text-align: center;
    }

    .legal-links {
        margin-bottom: 0.5rem;
    }

    .legal-links a {
        color: inherit;
        text-decoration: none;
        border-bottom: none;
    }

    .legal-links a:hover {
        text-decoration: underline;
    }

    .separator {
        margin: 0 0.5rem;
    }
</style>
