<style>
    .heading {
        text-align: center;
    }

    .avatar-container {
        width: 256px;
        height: 256px;
        position: relative;
        margin-bottom: 1rem;
    }

    .avatar-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 30%;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 2rem;
        letter-spacing: -2px;
        margin: 0.5rem 0 0.25rem;
    }

    p {
        font-size: 1.2rem;
        font-weight: normal;
        margin: 0.4rem 0 0.4rem;
    }

    ul {
        list-style: none;
        text-align: center;
        padding: 0;
    }

    li {
        margin: 0.5rem 0;
    }

    .container {
        text-align: center;
        max-width: 740px;
        width: 90%;
    }

    .link-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .social-links a {
        display: flex;
        align-items: center;
        color: inherit;
        border-bottom: none;
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }

    .social-links a:hover {
        opacity: 1;
    }

    /* Switch to row layout on larger screens */
    @media (min-width: 640px) {
        .link-container {
            flex-direction: row;
            justify-content: space-around;
            gap: 2rem;
        }
    }
</style>
