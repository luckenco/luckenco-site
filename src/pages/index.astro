<style>
    .heading {
        text-align: center;
    }

    .avatar-container {
        width: 256px;
        height: 256px;
        position: relative;
        margin-bottom: 1rem;
    }

    .avatar-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 30%;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 2rem;
        letter-spacing: -2px;
        margin: 0.5rem 0 0.25rem;
    }

    .intro p {
        font-size: 1.05rem;
        font-weight: normal;
        margin: 0.5rem 0;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin: 0.5rem 0;
    }

    .container {
        text-align: center;
        max-width: 740px;
        width: 90%;
    }

    .link-container {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        align-items: center;
        margin: 1.5rem 0;
    }

    .social-links {
        display: flex;
        gap: 0.4rem;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        margin-top: 0.5rem;
    }

    .social-links a {
        color: inherit;
        border-bottom: none;
        opacity: 0.85;
        transition: opacity 0.2s ease;
    }

    .social-links a:hover {
        opacity: 1;
    }

    @media (max-width: 640px) {
        .avatar-container {
            width: 176px;
            height: 176px;
        }

        h1 {
            letter-spacing: -1px;
            font-size: 1.65rem;
        }

        .intro p {
            font-size: 1rem;
        }
    }

    @media (min-width: 640px) {
        .link-container {
            flex-direction: row;
            justify-content: center;
            gap: 1.5rem;
        }

        .social-links {
            gap: 0.6rem;
        }
    }

    @media (min-width: 1024px) {
        .container {
            max-width: 780px;
        }

        .intro p {
            font-size: 1.15rem;
        }
    }

</style>
