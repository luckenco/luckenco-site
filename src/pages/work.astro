---
import BaseLayout from "../layouts/base-layout.astro";
---

<BaseLayout>
    <div class="work-container">
        <a href="/" class="back-link">← home</a>
        <h1>work</h1>

        <section class="work-section cta-section">
            <p>
                Taking on select projects: AI systems, automation pipelines,
                and production-grade software.
            </p>
            <a
                id="booking-link"
                href="https://cal.com/luckenbach/quick-chat"
                target="_blank"
                rel="noopener">Book a call →</a
            >
        </section>

        <section class="work-section">
            <h2>Currently Involved</h2>
            <div class="work-list">
                <div class="work-item">
                    <h3>steig</h3>
                    <p>
                        At steig, I help decision makers navigate AI
                        transformation, drive company-wide tool adoption, and
                        prepare for EU AI Act compliance.
                    </p>
                    <a
                        id="steig-link"
                        href="https://steig.co?ref=luckenco"
                        target="_blank"
                        rel="noopener">Visit steig →</a
                    >
                </div>
                <div class="work-item">
                    <h3>rsai.dev</h3>
                    <p>
                        Predictable development for unpredictable models. Let
                        the compiler handle the chaos. Minimal Rust framework to
                        interact with LLMs.
                    </p>
                    <a
                        id="steig-link"
                        href="https://rsai.dev?ref=luckenco"
                        target="_blank"
                        rel="noopener">View code →</a
                    >
                </div>
                <div class="work-item inactive-work">
                    <h3>lenge</h3>
                    <p>
                        Lenge uses AI to recommend personalized habits based on
                        your goals and energy levels. We then match you with an
                        accountability partner who shares similar ambitions.
                        Together, you embark on a 14-day challenge, supporting
                        and motivating each other along the way.
                    </p>
                    <a
                        id="lenge-link"
                        href="https://lenge.club?ref=luckenco"
                        target="_blank"
                        rel="noopener">Visit lenge →</a
                    >
                </div>
            </div>
        </section>

        <section class="work-section">
            <h2>Partners & Organizations</h2>
            <div class="partner-list">
                <div class="partner-item">
                    <span class="partner-name">coming soon...</span>
                    <p>You will find collaborators and mutuals here.</p>
                    <!-- <a id="kev-link" href="https://kevinludwig.com?ref=luckenco" target="_blank" rel="noopener"
                        >Visit the homepage →</a
                    > -->
                </div>
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .back-link {
        position: absolute;
        top: 2rem;
        left: 2rem;
        color: black;
    }

    .work-container {
        width: 90%;
        max-width: 740px;
        margin: 0 auto;
        padding: 1rem;
    }

    h1 {
        font-size: 1.6rem;
        letter-spacing: -2px;
        margin: 0.5rem 0 2rem;
        text-align: center;
    }

    h2 {
        font-size: 1.2rem;
        margin: 2rem 0 1rem;
    }

    h3 {
        font-size: 1.1rem;
        margin: 0 0 0.5rem;
    }

    p {
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0.5rem 0;
    }

    .work-section {
        margin: 2rem 0;
    }

    .work-list,
    .partner-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .work-item,
    .partner-item {
        padding: 1rem;
        border: 1px solid black;
    }

    .inactive-work {
        border-style: dashed;
    }

    .partner-name {
        font-weight: bold;
    }

    /* Tablet and desktop styles */
    @media (min-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.4rem;
        }

        h3 {
            font-size: 1.2rem;
        }

        p {
            font-size: 1rem;
        }

        .work-container {
            padding: 2rem;
        }

        .work-item,
        .partner-item {
            padding: 1.5rem;
        }
    }
</style>
